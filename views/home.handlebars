<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<style>
    .center {

        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<div>
    <h1 style="text-align: center; color:green;">Covid-19 Tracker</h1>
    <hr>
</div>

<div class="container">
    <div class="row">
        {{#each info}}
        <div class="row border border-success ml-3 mb-5">
        <div class="col">
            <div class="container text-center">
                <h2>{{ this.country}}</h2>
                <a href="#case"><img class="center" src="{{this.countryInfo.flag}}"></img></a>
            </div>
        </div>
        <div class="col">
            <div class="container mt-5 mb-5">
                <div id="case" style="text-align: center; color:red;"><strong>Total cases:- {{this.cases}}</strong>
                </div>
                <div id="case" style="text-align: center;"><strong style="color:blue;">Active cases:-
                        {{this.active}}</strong></div>
                <div id="case" style="text-align: center;"><strong class="text-danger"> Total deaths:-
                        {{this.deaths}}</strong></div>
                <div id="case" style="text-align: center;"><strong style="color:green;"> Total Recovered:-
                        {{this.recovered}}</strong></div>
                <br>      
                <div id="case" style="text-align: center;"><strong class="text-danger"> Today cases:-
                        {{this.todayCases}}</strong></div>
                <div id="case" style="text-align: center;"><strong style="color:rgb(14, 30, 177);"> Today deaths:-
                        {{this.todayDeaths}}</strong></div>
                <div id="case" style="text-align: center;"><strong style="color:rgb(177, 14, 150);"> Today Recovered:-
                        {{this.todayRecovered}}</strong></div> 
                <div id="case" style="text-align: center;"><strong style="color:rgba(21, 72, 240, 0.952);"> Tested:-
                        {{this.tests}}</strong></div>
                
                
            </div>
        </div>
        </div>

        {{/each}}
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>